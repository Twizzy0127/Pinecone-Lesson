 let word = "helloword";
 let result = "";
 for (let 1 = 0; 1 < word.length; i++) {
     if(1 % 2 === 1) {
         result = result + "Z";
     } else {
         result = result + word[i];
    }
}
 console.log(result);

//5
let size = 5;
for (let i = 0; i < size; i++) {
    let row = '';
    for (let a= 0 ; a < size; a++) {
        row += `*`;
    }
    console.log(row);
}








