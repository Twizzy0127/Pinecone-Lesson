//7
let ageGroup = 2008;
if( ageGroup < 14) {
    console.log("Children");
} else if ( 14 >= ageGroup && ageGroup<= 18) {
    console.log("Youth");
} else if( 18 < ageGroup && ageGroup <= 64) {
    console.log("Adults");
} else {
    console.log("Senior");
}


